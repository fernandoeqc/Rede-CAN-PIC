   int32 rx_id;
   int32 tx_id;
   int8 rx_len;               
   int8 dadosEnv[8] = {0xAA,0xBB},
        dadosRec[8];

   

   //VEJA placa_plus.h
   set_tris_a(0b00001100);
   set_tris_c(0b00000010);
   output_low(LED1);
   output_low(LED2);
   
   output_high(LED1);
   delay_ms(200);
   output_low(LED1);
